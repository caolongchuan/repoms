<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_micon"
        android:layout_width="@dimen/menu_icon_width"
        android:layout_height="@dimen/menu_icon_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/menu_con_margin_top" />

    <TextView
        android:id="@+id/txtv_mname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_menu_icon_name"
        android:text="入库"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:textSize="@dimen/menu_txt_name_size"
        android:layout_below="@id/img_micon"
        />
</RelativeLayout>